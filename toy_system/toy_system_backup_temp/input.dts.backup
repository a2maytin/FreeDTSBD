; Toy system input file for testing DNA bead repulsion
Integrator_Type = MC_Simulation
Set_Steps = 1 50000
Temperature = 1 0
Min_Max_Lenghts = 1 3
MinfaceAngle = -0.5

; Energy method
EnergyMethod = FreeDTS1.0_FF

; Membrane properties
Kappa = 60 0 0
Edge_Parameters = 5 0 0
VertexArea = 0 0.7 0 0

; Volume and area constraints
; VolumeCoupling = SecondOrder 0.0 10000 1
GlobalCurvatureCoupling = HarmonicPotential 150 0.3
TotalAreaCoupling = HarmonicPotential 1000 0.34

; Move parameters
; Using OpenMP versions (will fall back to serial if not compiled with OpenMP)
VertexPositionIntegrator = MetropolisAlgorithmOpenMP 1 1 0.05
AlexanderMove = MetropolisAlgorithmOpenMP 1
; VertexPositionIntegrator = MetropolisAlgorithm 1 1 0.05
; AlexanderMove = MetropolisAlgorithm 1

; DNA bonds - connect DNA beads
BondedPotentialBetweenVertices = HarmonicBondsList dna_bonds.txt

; Repulsion between membrane vertices and DNA beads (two-way, Newton's third law)
; Format: EP (repulsion strength) R0 (cutoff radius in nm)
; EP: Repulsion strength (energy × nm²). Higher values = stronger repulsion
; R0: Cutoff radius (nm). Only interactions within this distance are calculated
; Increased EP to 50 and R0 to 2.5 to prevent DNA beads from escaping
NonbondedInteractionBetweenVertices = DNARepulsion 10000 2.5 0.5

; Output settings
TimeSeriesData_Period = 1000
VisualizationFormat = VTUFileFormat VTU_F 1000
NonbinaryTrajectory = TSI TrajTSI 1000
Restart_Period = 1000

